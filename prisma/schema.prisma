generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
  relationMode = "prisma"
}

model Apotek{
  id String @id @default(cuid())
  lat Float
  long Float
  name String
  detail String
}


model Poli {
  id         String       @id @default(cuid())
  nama       String
  jadwalPoli JadwalPoli[]
}

model JadwalPoli {
  id     String @id @default(cuid())
  hari   String
  waktu  String
  Poli   Poli   @relation(fields: [poliId], references: [id])
  poliId String

  @@index([poliId])
}

